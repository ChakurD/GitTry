@model ItemViewModel

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
 <body>
 </body>
             <th scope="col">@Model.Item.Name</th>
             <th scope="col">@Model.Item.Brand</th>
             <th scope="col">@Model.Item.Model</th>
             <th scope="col">@Model.Item.Count</th>
             <th scope="col">@Model.Item.Price</th>
            @if (Model.Item.ResponsForItemId != null)
            {
                    <th scope="col">@Model.User.FirstName @Model.User.SecondName @Model.User.JobTittle</th>
            }
            <th scope="col">@Model.Storage.Name</th>
             <th scope="col">@Model.Item.Description</th>

             <form action="CreateItem" controller="EditMainEntity" method="post" name="Post_CreateItem">
            <div class="mb-3" form="Post_CreateItem"> 
            <label for="Name" class="form-label">Имя предмета</label>
            <input type="text" class="form-control" id="Name" name="Name" >
            </div>
            <div class="mb-3" form="Post_CreateItem">
            <label for="Brand" class="form-label">Бренд</label>
            <input type="text" class="form-control" id="Brand" name="Brand">
            </div>
            <div class="mb-3"  form="Post_CreateItem">
            <label for="ConfirmPassword" class="form-label">Подтверждение пароля</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword">
            </div>

            <div class="mb-3" form="Post_CreateItem">
            <label for="FirstName" class="form-label">Имя</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName"> 
            </div>

            <div class="mb-3" from="Post_CreateItem">
            <label for="SecondName" class="form-label">Фамилия</label>
            <input type="text" class="form-control" id="SecondName" name="SecondName">
            </div>

            <div class="mb-3" form="Post_CreateItem">
            <label for="JobTittle" class="form-label">Профессия</label>
            <input type="text" class="form-control" id="JobTittle" name="JobTittle">
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
      
</html>