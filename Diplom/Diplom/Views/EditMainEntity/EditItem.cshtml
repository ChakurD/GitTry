@model ItemViewModel

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
 <body>
 </body>
 <table class="table table-dark table-striped-columns">
     <thead>
         <tr>
             <th scope="col">Название предмета</th>
             <th scope="col">Бренд</th>
             <th scope="col">Модель</th>
             <th scope="col">Количество</th>
             <th scope="col">Цена за ед.</th>
            @if (Model.Item.ResponsForItemId != null)
            {
                    <th scope="col">Ответственный за предмет</th>
            }
            <th scope="col">Где числится</th>
             <th scope="col">Описание</th>
         </tr>
     </thead>
     <tbody>
         <tr>
             <th scope="col">@Model.Item.Name</th>
             <th scope="col">@Model.Item.Brand</th>
             <th scope="col">@Model.Item.Model</th>
             <th scope="col">@Model.Item.Count</th>
             <th scope="col">@Model.Item.Price</th>
            @if (Model.Item.ResponsForItemId != null)
            {
                    <th scope="col">@Model.User.FirstName @Model.User.SecondName @Model.User.JobTittle</th>
            }
            <th scope="col">@Model.Storage.Name</th>
             <th scope="col">@Model.Item.Description</th>
         </tr>

     </tbody>
 </table>
</html>