@model UserViewModel

<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
 <body>
 </body>
 <table class="table table-dark table-striped-columns">
     <thead>
         <tr>
             <th scope="col">Логин Пользователя</th>
             <th scope="col">Имя</th>
             <th scope="col">Фамилия</th>
             <th scope="col">Должность</th>
             <th scope="col">Роль</th>
             <th scope="col">Место работы</th>
             <th scope="col">Закрепленные предметы</th>
         </tr>
     </thead>
     <tbody>
         <tr>
             <th scope="col">@Model.User.Login</th>
             <th scope="col">@Model.User.FirstName</th>
             <th scope="col">@Model.User.SecondName</th>
             <th scope="col">@Model.User.JobTittle</th>
             <th scope="col">@Model.Role.Name</th>
             @if (Model.User.StorageWorkersId != null)
             {
                  <th scope="col">@Model.Storage.Name</th>
             }else if(Model.User.ResponsForItemId == null)
             {
                  <th scope="col">Работник офиса</th>
             }
            @if (Model.User.ResponsForItemId == null)
            {
                <th scope="col">нет закрепленнх предметов</th>
            }else
            @foreach (var item in Model.Items)
            {
                if (item.ResponsForItemId.Equals(Model.User.ResponsForItemId))
                {
                                <th scope="col">@item.Name</th>
                }
            }
         </tr>
     </tbody>
 </table>
</html>