@model UsersViewModel
@{
    int b = 1;
}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Пользователи</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
  <body>
     <p><a asp-action="CreateUser">Добавить пользователя</a></p>
      @foreach(var storage in Model.Storages)
      {
      <tittle 2>@storage.Name</tittle>
          <table class="table table-success table-striped">
            <thead>
                <tr>
                  <th scope="col">№</th>
                  <th scope="col">Логин пользователя</th>
                  <th scope="col">Имя фамилия</th>
                  <th scope="col">Должность</th>
                  <th> </th>
                  <th> </th>
                </tr>
            </thead>
            <tbody>

                @foreach(var user in Model.Users)
                {
                    if (user.StorageWorkersId.Equals(storage.StorageWorkersId))
                    {
                        for (int a = 1; a <= Model.StorageWorkers.FirstOrDefault(i => i.StorageWorkersId.Equals(storage.StorageWorkersId)).Users.Count(); a++)
                        {
                            <tr>
                                <th scope="col">@(a++)</th>
                            <td>
                               <a  class="link-primary" asp-area="" asp-controller="Home" asp-action="User" asp-route-userLogin="@user.Login"> @user.Login</a>
                            </td>
                            <th scope="col">@user.FirstName @user.SecondName</th>
                            <th scope="col">@user.JobTittle</th>
                            <td>
                                    <a asp-action="EditUser" asp-controller="EditMainEntity" asp-route-userLogin=" @user.Login">Изменить</a>
                            </td>
                            <td>
                                    <form asp-controller="EditMainEntity" asp-action="DeleteUser" method="post"  asp-route-userLogin=" @user.Login">
                                    <input type="submit" value="Удалить" />
                                </form>
                            </td>
                            </tr>
                        }
                    }
                }
            </tbody>
          </table>
    }
           <tittle 2>Работники офиса</tittle>
           <table class="table table-success table-striped">
                    <thead>
                        <tr>
                          <th scope="col">№</th>
                          <th scope="col">Логин пользователя</th>
                          <th scope="col">Имя фамилия</th>
                          <th scope="col">Должность</th>
                          <th> </th>
                          <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var user in Model.Users)
                        {
                        if (user.StorageWorkersId == null)
                            {
                             <tr>
                             <th scope="col">@(b++)</th>
                             <td>
                                     <a  class="link-primary" asp-area="" asp-controller="Home" asp-action="User" asp-route-userLogin="@user.Login"> @user.Login</a>
                             </td>
                             <th scope="col">@user.FirstName @user.SecondName</th>
                             <th scope="col">@user.JobTittle</th>
                                     <td>
                                            <a asp-action="EditUser" asp-controller="EditMainEntity" asp-route-userLogin=" @user.Login">Изменить</a>
                                    </td>
                                    <td>
                                                    <form asp-controller="EditMainEntity" asp-action="DeleteUser" method="post"  asp-route-userLogin=" @user.Login">
                                            <input type="submit" value="Удалить" />
                                        </form>
                                    </td>
                             </tr>
                            }
                        }
                    </tbody>
           </table>
    
</body>
</html>