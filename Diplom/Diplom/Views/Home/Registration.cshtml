@model RegistrationViewModel
<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
  </head>
 <body>
     <form action="Registration" controller="Home" method="post" name="Post_Registrartion">
            <div class="mb-3" form="Post_Registrartion"> 
            <label for="Login" class="form-label">Логин</label>
            <input type="text" class="form-control" id="Login" name="Login" >
            </div>
            <div class="mb-3" form="Post_Registrartion">
            <label for="Password" class="form-label">Пароль</label>
            <input type="password" class="form-control" id="Password" name="Password">
            </div>
            <div class="mb-3"  form="Post_Registrartion">
            <label for="ConfirmPassword" class="form-label">Подтверждение пароля</label>
            <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword">
            </div>

            <div class="mb-3" form="Post_Registrartion">
            <label for="FirstName" class="form-label">Имя</label>
            <input type="text" class="form-control" id="FirstName" name="FirstName"> 
            </div>

            <div class="mb-3" from="Post_Registrartion">
            <label for="SecondName" class="form-label">Фамилия</label>
            <input type="text" class="form-control" id="SecondName" name="SecondName">
            </div>

            <div class="mb-3" form="Post_Registrartion">
            <label for="JobTittle" class="form-label">Профессия</label>
            <input type="text" class="form-control" id="JobTittle" name="JobTittle">
            </div>
            <div form="Post_Registrartion">
                <select id="StorageWorkersId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="StorageWorkersId">
                    <option selected>Место работы</option>
                    @for(int i =0; i<=Model.StorageWorkers.Count();i++)
                    {
                        @if (i > 0)
                        {
                            @foreach (var storage in Model.Storages)
                            {
                                if (i.Equals(storage.StorageId))
                                {
                                <option value="@i">@storage.Name</option>
                                }
                            }
                        }else{
                        <option value="@i">Не является работником склада</option>  
                        }
                
                    }
                </select>
            </div>
            <div form="Post_Registrartion">
                <select id="RoleId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example" name="RoleId">
                    <option selected>Роль</option>
                @for (int i = 2; i <= Model.Roles.Count(); i++)
                {
                        @foreach (var role in Model.Roles)
                        {
                            if (i.Equals(role.Id))
                            {
                                <option value="@i">@role.Name</option>
                            }
                        }
                    

                }
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>