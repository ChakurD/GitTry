<a asp-action="Create">Добавить новой книги</a>
@model Book
@{
    ViewBag.Title = "Добавление книги";
}
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Название</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CreatedDate" class="control-label">Дата создания</label>
        <input type="date" asp-for="CreatedDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorName" class="control-label">Имя Автора</label>
        <input type="text" asp-for="AuthorName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Готово" class="btn btn-default" />
    </div>
</form>